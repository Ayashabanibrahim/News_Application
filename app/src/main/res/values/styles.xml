<?xml version="1.0" encoding="utf-8"?>
<resources>






        <!-- Light Mode Theme -->
        <style name="LightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
            <item name="colorPrimary">@color/lightColorPrimary</item>
            <item name="colorSecondary">@color/lightColorSecondary</item>
            <item name="android:windowBackground">@color/lightColorSurface</item>
            <item name="android:textColorPrimary">@color/lightTextColorPrimary</item>
            <item name="android:textColorSecondary">@color/lightTextColorSecondary</item>
            <item name="android:statusBarColor">@color/lightStatusBarColor</item>
            <item name="android:navigationBarColor">@color/lightNavigationBarColor</item>
            <item name="android:colorControlHighlight">@color/lightRippleColor</item>
        </style>

        <!-- Dark Mode Theme -->
        <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
            <item name="colorPrimary">@color/darkColorPrimary</item>
            <item name="colorSecondary">@color/darkColorSecondary</item>
            <item name="android:windowBackground">@color/darkColorSurface</item>
            <item name="android:textColorPrimary">@color/darkTextColorPrimary</item>
            <item name="android:textColorSecondary">@color/darkTextColorSecondary</item>
            <item name="android:statusBarColor">@color/darkStatusBarColor</item>
            <item name="android:navigationBarColor">@color/darkNavigationBarColor</item>
            <item name="android:colorControlHighlight">@color/darkRippleColor</item>
        </style>

    <style name="TabLayoutTextStyle">
    <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>