<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TitleNewsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/news_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:src="@drawable/img_7"
            />
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="BDC news"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/description"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="Man Utd are remaining silent llllllllllllllllllllllllllllllllllllllllfollowing \nthe near Erik ten Hag stand?"
                android:textSize="20sp" />
            <CheckBox
                android:id="@+id/favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@null"
                android:button="@drawable/fav_selector"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="3 hours ago"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="start"
            android:gravity="start"
            android:maxLines="10"
            android:lines="10"
            android:textSize="20sp"
            android:text="Man Utd are remaining silent llllllllllllllllllllllllllllllllllllllllfollowing the near Erik ten Hag stanMan Utd are remaining silent llllllllllllllllllllllllllllllllllllllllfollowing \nthe near Erik ten Hag stanMan Utd are remaining silent llllllllllllllllllllllllllllllllllllllllfollowing \nthe near Erik ten Hag stan"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/full_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="View Full Article"
             android:clickable="true"
            android:drawableEnd="@drawable/baseline_play_arrow_24"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</FrameLayout>